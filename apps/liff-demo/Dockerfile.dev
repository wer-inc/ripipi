FROM node:20-alpine
WORKDIR /app
RUN corepack enable

# Copy workspace files
COPY pnpm-workspace.yaml ./
COPY pnpm-lock.yaml ./

# Copy package files
COPY package.json ./
COPY apps/liff-demo/package.json ./apps/liff-demo/

# Install dependencies
RUN pnpm install --no-frozen-lockfile

# Copy app source
COPY . .

WORKDIR /app/apps/liff-demo
EXPOSE 5173
CMD ["pnpm", "dev", "--host", "0.0.0.0"]