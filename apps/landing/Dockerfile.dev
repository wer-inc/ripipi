FROM node:20-alpine
WORKDIR /app
RUN corepack enable

# Copy workspace files
COPY pnpm-workspace.yaml ./
COPY pnpm-lock.yaml ./

# Copy package files
COPY package.json ./
COPY apps/landing/package.json ./apps/landing/

# Install dependencies
RUN pnpm install --no-frozen-lockfile

# Copy app source
COPY . .

WORKDIR /app/apps/landing
EXPOSE 3000
CMD ["pnpm", "dev"]