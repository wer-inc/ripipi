{
  "name": "@ripipi/backend",
  "version": "1.0.0",
  "description": "Reservation system backend API with Fastify and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "mock-server": "node mock-server.js",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "tap test/**/*.test.ts",
    "test:unit": "tap test/unit/**/*.test.ts",
    "test:integration": "tap test/integration/**/*.test.ts",
    "test:e2e": "tap test/e2e/**/*.test.ts",
    "test:load": "tap test/load/**/*.test.ts",
    "test:coverage": "tap test/**/*.test.ts --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "migrate": "node-pg-migrate",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create",
    "db:migrate": "tsx scripts/migrate.ts up",
    "db:migrate:down": "tsx scripts/migrate.ts down",
    "db:setup": "tsx scripts/setup-db.ts",
    "db:setup:reset": "tsx scripts/setup-db.ts --reset",
    "db:verify": "tsx scripts/setup-db.ts --verify",
    "clean": "rimraf dist coverage .tap",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "reservation",
    "booking",
    "api",
    "fastify",
    "typescript",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.5.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@sinclair/typebox": "^0.32.0",
    "@fastify/postgres": "^5.2.2",
    "@fastify/redis": "^6.1.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.0",
    "fastify": "^4.26.0",
    "fastify-plugin": "^4.5.1",
    "luxon": "^3.4.4",
    "node-pg-migrate": "^7.0.0",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "stripe": "^14.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9",
    "@types/tap": "^15.0.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autocannon": "^7.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.1",
    "tap": "^18.6.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}