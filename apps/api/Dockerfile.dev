FROM node:20-alpine
WORKDIR /app
RUN corepack enable

# Copy workspace files
COPY pnpm-workspace.yaml ./
COPY pnpm-lock.yaml ./

# Copy package files
COPY package.json ./
COPY apps/api/package.json ./apps/api/

# Install dependencies
RUN pnpm install --no-frozen-lockfile

# Copy app source
COPY . .

WORKDIR /app/apps/api
EXPOSE 8787
CMD ["pnpm", "dev"]